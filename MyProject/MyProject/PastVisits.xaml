<Window x:Class="MyProject.PastVisits"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProject"
        xmlns:dg="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        mc:Ignorable="d"
        Title="Записи" Style="{StaticResource MyWindow}"
        MinHeight="400" MinWidth="1000">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0"
                  Name="ResSet"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Пациент" Binding="{Binding Path=p.SURNAME}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Терапевт" Binding="{Binding  Path=user.SURNAME}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата" Binding="{Binding  Path=v.VISIT_DATE_TIME1, StringFormat=dd/MM/yyyy}" Width="auto"></DataGridTextColumn>
                <dg:DataGridTemplateColumn Header="Жалобы" Width="*">
                    <dg:DataGridTemplateColumn.CellTemplate> 
                        <DataTemplate>
                            <TextBlock Text="{Binding v.COMPLAINTS}" TextWrapping="WrapWithOverflow"/>
                        </DataTemplate>
                    </dg:DataGridTemplateColumn.CellTemplate>
                </dg:DataGridTemplateColumn>
                <DataGridTextColumn Header="Давление" Binding="{Binding v.PRESSURE}" Width="auto"></DataGridTextColumn>
                <dg:DataGridTemplateColumn Header="Диагноз" Width="*">
                    <dg:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding v.DIAGNOSIS}" TextWrapping="WrapWithOverflow"/>
                        </DataTemplate>
                    </dg:DataGridTemplateColumn.CellTemplate>
                </dg:DataGridTemplateColumn>
               
                <dg:DataGridTemplateColumn Header="Дополнительно" Width="*">
                    <dg:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding v.ADDITIONAL_INFORMATION}" TextWrapping="WrapWithOverflow"/>
                        </DataTemplate>
                    </dg:DataGridTemplateColumn.CellTemplate>
                </dg:DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Назад" Name="Back" Click="Back_Click" 
                Style="{DynamicResource MyButton}"
                Template="{DynamicResource MyButtonTemplate}"
                Grid.Row="1" MinHeight="50" Grid.Column="0"></Button>
        <Button Content="Выбрать" Name="Choose" Click="Choose_Click"
                Style="{DynamicResource MyButton}"
                Template="{DynamicResource MyButtonTemplate}"
                Grid.Row="1" MinHeight="50" Grid.Column="1"></Button>
    </Grid>
</Window>
